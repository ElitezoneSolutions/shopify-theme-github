<style>
  .custom-flex-section {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: center;
    padding: 20px;
    gap: 20px;
    max-width: 1200px;
    margin: auto;
  }
  .custom-flex-section.color-scheme--background-1 {
    background-color: rgb(var(--color-background-1));
    color: rgb(var(--color-text));
  }
  .custom-flex-section.color-scheme--background-2 {
    background-color: rgb(var(--color-background-2));
    color: rgb(var(--color-text));
  }
  .custom-flex-section.color-scheme--accent-1 {
    background-color: rgb(var(--color-accent-1));
    color: rgb(var(--color-text));
  }
  .custom-flex-section.color-scheme--inverse {
    background-color: rgb(var(--color-base-inverse));
    color: rgb(var(--color-background-1));
  }
  .feature-content {
    flex: 1;
    min-width: 300px;
    display: flex;
    flex-direction: column;
    gap: 20px;
  }
  .content {
    text-align: center;
  }
  .image-container {
    text-align: center;
    min-width: 300px;
  }
  .image-container img {
    width: 100%;
    max-width: 400px;
  }
  .video-container {
    text-align: center;
    min-width: 300px;
  }
  .video-ratio-wrapper {
    position: relative;
    width: 100%;
    height: 0;
    overflow: hidden;
  }
  .video-ratio-wrapper video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
  @media (max-width: 767px) {
    .feature-content {
      flex-direction: row;
    }
  }
</style>

<div
  id="custom-flex-section-{{ section.id }}"
  class="custom-flex-section color-scheme--{{ section.settings.color_scheme }}"
>
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'content' %}
        <div class="feature-content">
          <div class="content">
            {% if block.settings.heading != blank %}
              <h3>{{ block.settings.heading }}</h3>
            {% endif %}
            {% if block.settings.paragraph != blank %}
              <p>{{ block.settings.paragraph }}</p>
            {% endif %}
            {% if block.settings.heading_2 != blank %}
              <h3>{{ block.settings.heading_2 }}</h3>
            {% endif %}
            {% if block.settings.paragraph_2 != blank %}
              <p>{{ block.settings.paragraph_2 }}</p>
            {% endif %}
            {% if block.settings.heading_3 != blank %}
              <h3>{{ block.settings.heading_3 }}</h3>
            {% endif %}
            {% if block.settings.paragraph_3 != blank %}
              <p>{{ block.settings.paragraph_3 }}</p>
            {% endif %}
          </div>
        </div>
      {% when 'image' %}
        <div class="image-container">
          {% if block.settings.image != blank %}
            <img src="{{ block.settings.image | img_url: '600x400' }}" alt="{{ block.settings.alt_text | escape }}">
          {% endif %}
        </div>
      {% when 'video' %}
        {% assign ratio = block.settings.video_ratio | default: '16:9' %}
        {% if ratio == '16:9' %}
          {% assign ratio_percent = '56.25' %}
        {% elsif ratio == '4:3' %}
          {% assign ratio_percent = '75' %}
        {% elsif ratio == '1:1' %}
          {% assign ratio_percent = '100' %}
        {% elsif ratio == '21:9' %}
          {% assign ratio_percent = '42.86' %}
        {% else %}
          {% assign ratio_percent = '56.25' %}
        {% endif %}
        <div class="video-container">
          <div class="video-ratio-wrapper" style="padding-bottom: {{ ratio_percent }}%;">
            {% assign video_url = block.settings.video_url
              | default: 'https://cdn.shopify.com/videos/c/vp/dd0d65a8ee0b412187e96eec6a907150/dd0d65a8ee0b412187e96eec6a907150.HD-1080p-2.5Mbps-43033818.mp4'
            %}
            <video
              aria-label="{{ block.settings.video_aria_label | escape }}"
              {% if block.settings.autoplay %}
                autoplay
              {% endif %}
              {% if block.settings.loop %}
                loop
              {% endif %}
              {% if block.settings.muted %}
                muted
              {% endif %}
              {% if block.settings.controls %}
                controls
              {% endif %}
            >
              <source src="{{ video_url }}" type="video/mp4">
              Your browser does not support the video tag.
            </video>
          </div>
        </div>
    {% endcase %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "Custom Flex Section",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "label": "Color Scheme",
      "options": [
        { "value": "background-1", "label": "Background 1" },
        { "value": "background-2", "label": "Background 2" },
        { "value": "accent-1", "label": "Accent 1" },
        { "value": "inverse", "label": "Inverse" }
      ],
      "default": "background-1"
    }
  ],
  "blocks": [
    {
      "type": "content",
      "name": "Content Block",
      "settings": [
        { "type": "text", "id": "heading", "label": "Heading 1" },
        { "type": "richtext", "id": "paragraph", "label": "Paragraph 1" },
        { "type": "text", "id": "heading_2", "label": "Heading 2" },
        { "type": "richtext", "id": "paragraph_2", "label": "Paragraph 2" },
        { "type": "text", "id": "heading_3", "label": "Heading 3" },
        { "type": "richtext", "id": "paragraph_3", "label": "Paragraph 3" }
      ]
    },
    {
      "type": "image",
      "name": "Image Block",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Image" },
        { "type": "text", "id": "alt_text", "label": "Image Alt Text" }
      ]
    },
    {
      "type": "video",
      "name": "Video Block",
      "settings": [
        { "type": "url", "id": "video_url", "label": "Video URL" },
        { "type": "checkbox", "id": "autoplay", "label": "Autoplay", "default": false },
        { "type": "checkbox", "id": "loop", "label": "Loop", "default": false },
        { "type": "checkbox", "id": "muted", "label": "Muted", "default": false },
        { "type": "checkbox", "id": "controls", "label": "Show Controls", "default": true },
        {
          "type": "select",
          "id": "video_ratio",
          "label": "Video Ratio",
          "options": [
            { "value": "16:9", "label": "16:9" },
            { "value": "4:3", "label": "4:3" },
            { "value": "1:1", "label": "1:1" },
            { "value": "21:9", "label": "21:9" }
          ],
          "default": "16:9"
        },
        { "type": "text", "id": "video_aria_label", "label": "Video ARIA Label" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Flex Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
