{% schema %}
{
    "name": "Feature Content",
    "settings": [
        {
            "type": "text",
            "id": "heading_1",
            "label": "Heading 1"
        },
        {
            "type": "textarea",
            "id": "content_1",
            "label": "Content 1"
        },
        {
            "type": "text",
            "id": "heading_2",
            "label": "Heading 2"
        },
        {
            "type": "textarea",
            "id": "content_2",
            "label": "Content 2"
        },
        {
            "type": "text",
            "id": "heading_3",
            "label": "Heading 3"
        },
        {
            "type": "textarea",
            "id": "content_3",
            "label": "Content 3"
        },
        {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
        },
        {
            "type": "url",
            "id": "video_url",
            "label": "Video URL"
        },
        {
            "type": "select",
            "id": "media_type",
            "label": "Media Type",
            "options": [
                {
                    "value": "image",
                    "label": "Image"
                },
                {
                    "value": "video",
                    "label": "Video"
                }
            ]
        },
        {
            "type": "select",
            "id": "aspect_ratio",
            "label": "Aspect Ratio",
            "options": [
                {
                    "value": "16:9",
                    "label": "16:9"
                },
                {
                    "value": "4:3",
                    "label": "4:3"
                },
                {
                    "value": "1:1",
                    "label": "1:1"
                }
            ]
        },
        {
            "type": "checkbox",
            "id": "video_autoplay",
            "label": "Autoplay Video"
        },
        {
            "type": "checkbox",
            "id": "video_loop",
            "label": "Loop Video"
        },
        {
            "type": "checkbox",
            "id": "video_muted",
            "label": "Mute Video"
        }
    ],
    "presets": [
        {
            "name": "Feature Content",
            "category": "Custom"
        }
    ]
}
{% endschema %}

<style>
  body {
          font-family: 'inter', sans-serif;
          padding: 0;
  }

  .container {
          display: flex;
          flex-wrap: wrap;
          align-items: center;
          justify-content: center;
          padding: 20px;
          gap: 20px;
          max-width: 1200px;
          margin: auto;
          background-color: #f0f0f0;
  }
  .feature-content {
          display: flex;
          flex-direction: column;
          gap: 20px;
          flex: 1;
          min-width: 300px;
  }

  .content {
          padding: 20px;
          text-align: center;
  }

  #image {
          flex: 1;
          text-align: center;
          min-width: 300px;
  }

  #image img {
          width: 100%;
          max-width: 400px;
  }

  @media (max-width: 767px) {
          .feature-content {
                  flex-direction: row;
          }

          .content {
                  flex: 1;
                  padding: 0px;
          }

          #image {
                  flex: 1;
          }
  }
</style>

<div class="container">
  <div class="feature-content">
    <div class="content">
      <h3>{{ section.settings.heading_1 }}</h3>
      <p>{{ section.settings.content_1 }}</p>
    </div>
    <div class="content">
      <h3>{{ section.settings.heading_2 }}</h3>
      <p>{{ section.settings.content_2 }}</p>
    </div>
    <div class="content">
      <h3>{{ section.settings.heading_3 }}</h3>
      <p>{{ section.settings.content_3 }}</p>
    </div>
  </div>
  <div id="image">
    {% if section.settings.media_type == 'image' %}
      <img src="{{ section.settings.image | img_url: '600x400' }}" alt="image">
    {% elsif section.settings.media_type == 'video' %}
      <video
        src="{{ section.settings.video_url }}"
        {% if section.settings.video_autoplay %}
          autoplay
        {% endif %}
        {% if section.settings.video_loop %}
          loop
        {% endif %}
        {% if section.settings.video_muted %}
          muted
        {% endif %}
        style="aspect-ratio: {{ section.settings.aspect_ratio }};"
      ></video>
    {% endif %}
  </div>
</div>
