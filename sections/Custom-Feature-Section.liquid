<style>
  .feature-style-container {
    font-family: 'Inter', sans-serif;
    padding: 20px;
    background-color: {{ section.settings.background_color }};
    max-width: {{ section.settings.page_width }}px;
    margin: auto;
  }

  .feature-content {
    display: flex;
    flex-direction: column;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
    align-items: center;
  }

  .content {
    flex: 1;
    min-width: 300px;
    padding: 20px;
    text-align: center;
  }

  .content h3 {
    color: {{ section.settings.heading_color }};
    margin-bottom: 10px;
  }

  .content p {
    color: {{ section.settings.text_color }};
    margin-top: 0;
  }

  .image-block,
  .video-block {
    flex: 1;
    text-align: center;
    min-width: 300px;
  }

  .image-block img {
    width: 100%;
    max-width: 400px;
    height: auto;
  }

  .video-block video {
    width: 100%;
    max-width: 400px;
    height: auto;
  }

  @media (max-width: 767px) {
    .feature-content {
      flex-direction: column;
    }

    .content {
      padding: 10px;
    }
  }
</style>

<div class="feature-style-container">
  <div class="feature-content">
    {% for block in section.blocks %}
      {% if block.type == 'content' %}
        <div class="content">
          {% if block.settings.heading_1 != blank or block.settings.paragraph_1 != blank %}
            <h3>{{ block.settings.heading_1 }}</h3>
            <p>{{ block.settings.paragraph_1 }}</p>
          {% endif %}
        </div>
        <div class="content">
          {% if block.settings.heading_2 != blank or block.settings.paragraph_2 != blank %}
            <h3>{{ block.settings.heading_2 }}</h3>
            <p>{{ block.settings.paragraph_2 }}</p>
          {% endif %}
        </div>
        <div class="content">
          {% if block.settings.heading_3 != blank or block.settings.paragraph_3 != blank %}
            <h3>{{ block.settings.heading_3 }}</h3>
            <p>{{ block.settings.paragraph_3 }}</p>
          {% endif %}
        </div>
      {% elsif block.type == 'image' %}
        <div class="image-block">
          <img src="{{ block.settings.image | img_url: '600x400' }}" alt="{{ block.settings.alt_text }}">
        </div>
      {% elsif block.type == 'video' %}
        <div class="video-block">
          <video
            {% if block.settings.autoplay %}
              autoplay
            {% endif %}
            {% if block.settings.mute %}
              muted
            {% endif %}
            {% if block.settings.controls %}
              controls
            {% endif %}
            {% if block.settings.loop %}
              loop
            {% endif %}
            style="aspect-ratio: {{ block.settings.ratio }};"
          >
            <source src="{{ block.settings.video_url }}" type="video/mp4">
            Your browser does not support the video tag.
          </video>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Feature Style Section",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f0f0f0"
    },
    {
      "type": "range",
      "id": "page_width",
      "label": "Page Width",
      "min": 800,
      "max": 1600,
      "step": 10,
      "default": 1200,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    }
  ],
  "blocks": [
    {
      "type": "content",
      "name": "Content Block",
      "settings": [
        {
          "type": "header",
          "content": "Heading 1"
        },
        {
          "type": "text",
          "id": "heading_1",
          "label": "Heading 1",
          "default": "Heading 1"
        },
        {
          "type": "textarea",
          "id": "paragraph_1",
          "label": "Paragraph 1",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
        },
        {
          "type": "header",
          "content": "Heading 2"
        },
        {
          "type": "text",
          "id": "heading_2",
          "label": "Heading 2",
          "default": "Heading 2"
        },
        {
          "type": "textarea",
          "id": "paragraph_2",
          "label": "Paragraph 2",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
        },
        {
          "type": "header",
          "content": "Heading 3"
        },
        {
          "type": "text",
          "id": "heading_3",
          "label": "Heading 3",
          "default": "Heading 3"
        },
        {
          "type": "textarea",
          "id": "paragraph_3",
          "label": "Paragraph 3",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
        }
      ]
    },
    {
      "type": "image",
      "name": "Image Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text",
          "default": "Image"
        }
      ]
    },
    {
      "type": "video",
      "name": "Video Block",
      "settings": [
        {
          "type": "url",
          "id": "video_url",
          "label": "Video URL",
          "info": "Upload your video to Shopify Files and paste the URL here."
        },
        {
          "type": "checkbox",
          "id": "autoplay",
          "label": "Autoplay",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "mute",
          "label": "Mute",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "controls",
          "label": "Show Controls",
          "default": true
        },
        {
          "type": "checkbox",
          "id": "loop",
          "label": "Loop",
          "default": true
        },
        {
          "type": "select",
          "id": "ratio",
          "label": "Video Aspect Ratio",
          "options": [
            {
              "value": "16/9",
              "label": "16:9"
            },
            {
              "value": "4/3",
              "label": "4:3"
            },
            {
              "value": "1/1",
              "label": "1:1"
            }
          ],
          "default": "16/9"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Feature Style Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}
