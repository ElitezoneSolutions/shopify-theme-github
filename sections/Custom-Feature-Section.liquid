{% schema %}
{
  "name": "Feature Style Section",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#f0f0f0"
    },
    {
      "type": "range",
      "id": "page_width",
      "label": "Page Width",
      "min": 800,
      "max": 1600,
      "step": 10,
      "default": 1200,
      "unit": "px"
    },
    {
      "type": "color",
      "id": "heading_color",
      "label": "Heading Color",
      "default": "#000000"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#333333"
    }
  ],
  "blocks": [
    {
      "type": "content",
      "name": "Content Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Heading"
        },
        {
          "type": "textarea",
          "id": "text",
          "label": "Text",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
        }
      ]
    },
    {
      "type": "image",
      "name": "Image Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "alt_text",
          "label": "Alt Text",
          "default": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Feature Style Section",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<style>
  .feature-style-container {
    font-family: 'Inter', sans-serif;
    padding: 20px;
    background-color: {{ section.settings.background_color }};
    max-width: {{ section.settings.page_width }}px;
    margin: auto;
  }

  .feature-content {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
    align-items: center;
  }

  .content {
    flex: 1;
    min-width: 300px;
    padding: 20px;
    text-align: center;
  }

  .content h3 {
    color: {{ section.settings.heading_color }};
  }

  .content p {
    color: {{ section.settings.text_color }};
  }

  .image-block {
    flex: 1;
    text-align: center;
    min-width: 300px;
  }

  .image-block img {
    width: 100%;
    max-width: 400px;
    height: auto;
  }

  @media (max-width: 767px) {
    .feature-content {
      flex-direction: column;
    }

    .content {
      padding: 10px;
    }
  }
</style>

<div class="feature-style-container">
  <div class="feature-content">
    {% for block in section.blocks %}
      {% if block.type == 'content' %}
        <div class="content">
          <h3>{{ block.settings.heading }}</h3>
          <p>{{ block.settings.text }}</p>
        </div>
      {% elsif block.type == 'image' %}
        <div class="image-block">
          <img src="{{ block.settings.image | img_url: '600x400' }}" alt="{{ block.settings.alt_text }}">
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>
